{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "paths": {
            "@/*": ["./lib/*"]
        },
        "esModuleInterop": true,
        "noImplicitAny": false,
        "outDir": "./dist"
    },
    "include": ["./lib/**/*"],
    "exclude": ["node_modules", "*.test.*"]
}
