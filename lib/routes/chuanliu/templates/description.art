{{ if images }}
  {{ each images image }}
    {{ if image?.src }}
      <figure>
        <img
          {{ if image.alt }}
            alt="{{ image.alt }}"
          {{ /if }}
          {{ if image.width }}
            alt="{{ image.width }}"
          {{ /if }}
          {{ if image.height }}
            alt="{{ image.height }}"
          {{ /if }}
        src="{{ image.src }}">
      </figure>
    {{ /if }}
  {{ /each }}
{{ /if }}

{{ if description }}
  {{@ description }}
{{ /if }}