{{ if media }}
    {{ if media.type === 1 }}
        <video controls preload="metadata" poster="{{ media.picture_url }}">
            <source src="{{ media.video_url }}" type="video/mp4">
        </video>
    {{ else if media.type === 2 }}
        <img src="{{ media.picture_url }}">
    {{ /if }}
    <br>
{{ /if }}

{{@ text }}
