{{if cover_url && title}}
<img src="{{cover_url}}" alt="{{title}}" referrerpolicy="no-referrer">
{{/if}}

<h2>电影信息</h2>
<ul>
{{if directors}}
<li>导演：{{directors.join(', ')}}</li>
{{/if}}
{{if actors}}
<li>演员：{{actors.join(', ')}}</li>
{{/if}}
{{if genres}}
<li>类型：{{genres.join(' / ')}}</li>
{{/if}}
{{if pubdate}}
<li>上映日期：{{pubdate.join(' / ')}}</li>
{{/if}}
{{if wish_count}}
<li>想看：{{wish_count}}</li>
{{/if}}
</ul>

{{ if intro }}
<h2>剧情简介</h2>
<p>{{ intro }}</p>
{{/if}}
