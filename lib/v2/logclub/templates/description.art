{{ if image?.src }}
  <figure>
    <img 
      {{ if image.alt }}
        alt="{{ image.alt }}"
      {{ /if }}
    src="{{ image.src }}">
  </figure>
{{ /if }}

{{ if intro }}
  <p>{{ intro }}</p>
{{ /if }}

{{ if video?.src }}
  <video
    {{ set poster = video.poster || image?.src }}
    {{ if poster }}
      poster="{{ poster }}"
    {{ /if }}
    controls>
    <source
      src="{{ video.src }}"
      type="{{ video.type }}">
    <object data="{{ video.src }}">
      <embed src="{{ video.src }}">
    </object>
  </video>
{{ /if }}

{{ if description }}
  {{@ description }}
{{ /if }}